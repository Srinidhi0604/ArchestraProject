# ============================================================================
# SentinelGrid â€” Autonomous Infrastructure Orchestration Platform
# Environment Configuration Template
# ============================================================================
# Copy this file to .env.local (frontend) or .env (backend) and fill in values

# --- ARCHESTRA RUNTIME (Backend AI Orchestration) ---
ARCHESTRA_RUNTIME=http://localhost:9000
ARCHESTRA_RUNTIME_HEALTH_URL=http://localhost:9000/health

# Agent configuration
ARCHESTRA_AGENT_ID=YOUR_AGENT_ID
ARCHESTRA_API_KEY=YOUR_ARCHESTRA_API_KEY
ARCHESTRA_API_TOKEN=YOUR_ARCHESTRA_API_TOKEN

# Chat UI endpoints
ARCHESTRA_CHAT_BASE_URL=http://localhost:3000
ARCHESTRA_CHAT=http://localhost:3000

# MCP HTTP gateway base for orchestration
ARCHESTRA_BASE_URL=http://localhost:9000/v1/a2a

# --- ARCHESTRA CHAT UI ---
ARCHESTRA_UI_URL=http://localhost:3000

# --- FRONTEND CONFIGURATION (control-center) ---
NEXT_PUBLIC_ARCHESTRA_RUNTIME=http://localhost:9000
NEXT_PUBLIC_ARCHESTRA_AGENT_ID=YOUR_AGENT_ID
NEXT_PUBLIC_ARCHESTRA_API_KEY=YOUR_ARCHESTRA_API_KEY
NEXT_PUBLIC_ARCHESTRA_CHAT=http://localhost:3000
NEXT_PUBLIC_ARCHESTRA_CHAT_BASE_URL=http://localhost:3000

# Google Maps 3D Tiles (optional, for advanced map features)
# Get API key from: https://cloud.google.com/maps/products/maps-platform
NEXT_PUBLIC_GOOGLE_3D_TILES_API_KEY=YOUR_GOOGLE_MAPS_3D_TILES_API_KEY

# Orchestration UI modes: 'compact' or 'verbose'
NEXT_PUBLIC_ORCHESTRATION_PROMPT_MODE=compact

# Optional: System ID mapping if IDs differ between Archestra and MCP servers
# ARCHESTRA_SYSTEM_ID_MAP={"grid_001":"sys-power-grid-1","hydro_001":"sys-hydro-1","sewage_001":"sys-sewage-1"}

# --- MCP SERVERS (Infrastructure Services) ---
# HTTP endpoints for MCP domain servers
ARCHESTRA_MCP_SYSTEMS_URL=http://localhost:8010/systems

# Optional MCP-specific bearer token (defaults to ARCHESTRA_API_TOKEN if not set)
# ARCHESTRA_MCP_SYSTEMS_BEARER_TOKEN=YOUR_MCP_SPECIFIC_TOKEN

# MCP server ports (used by start_mcps_http.py)
# POWER_MCP_PORT=8001
# HYDRO_MCP_PORT=8002
# SEWAGE_MCP_PORT=8003

# --- MONITORING & TELEMETRY ---
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_PORT=9090
GRAFANA_URL=http://grafana-dashboard.local
GRAFANA_PORT=3002
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# --- DEVELOPMENT / DEBUG (NOT for production) ---
MCP_ALLOW_ALL_HOSTS=false
DEBUG_MODE=false
VERBOSE_LOGGING=false

# --- SERVICE PORTS ---
# Frontend (Next.js)
NEXTJS_PORT=3001
NEXTJS_HOST=127.0.0.1

# Backend MCP aggregator (HTTP mode)
MCP_AGGREGATOR_PORT=8010
MCP_AGGREGATOR_HOST=127.0.0.1

# Individual MCP servers (HTTP domains)
# Power Infrastructure MCP
POWER_MCP_HOST=127.0.0.1
POWER_MCP_PORT=8001

# Hydro Infrastructure MCP
HYDRO_MCP_HOST=127.0.0.1
HYDRO_MCP_PORT=8002

# Sewage Infrastructure MCP
SEWAGE_MCP_HOST=127.0.0.1
SEWAGE_MCP_PORT=8003
